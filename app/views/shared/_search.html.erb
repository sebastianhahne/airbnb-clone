<%= form_tag instruments_path, class: "searchbar row justify-content-md-center", method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control col-md-auto input-field",
    placeholder: "Find an instrument"
  %>
  <%= submit_tag "Search", class: "btn btn-primary col-md-auto" %>
<% end %>
