<div class="container">

  <h1>Found <%= @instruments.count %> Instruments</h1>

  <div class="row d-flex justify-content-start">

    <% @instruments.each do |instrument| %>

      <div class="card-trip col-md-auto">
        <% if instrument.photo.attached? %>
          <%= link_to (cl_image_tag instrument.photo.key, height: 320, width: 320, crop: :fill, class: 'instrument-image'), instrument_path(instrument) %>
        <% else %>
          <%= link_to instrument_path(instrument) do %>
            <%= image_tag '/app/assets/images/guitar_dummy.jpg', class: 'instrument-image' %>
          <% end %>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= instrument.name.titleize %></h2><%= link_to "Details", instrument %>
            <p><%= instrument.category.titleize %></p>

          </div>
          <h2 class="card-trip-pricing">5 🍺</h2>
          <%= cl_image_tag instrument.user.photo.key, height: 100, width: 100, crop: :fill, class: 'card-trip-user avatar-bordered'  %>
        </div>
      </div>

    <% end %>

  </div>

</div>


