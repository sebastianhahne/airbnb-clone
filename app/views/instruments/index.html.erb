<div class="container">

  <h1>Found <%= @instruments.count %> Instruments</h1>

  <div class="row d-flex justify-content-start">

    <% @instruments.each do |instrument| %>

      <div class="card-trip">
        <%= cl_image_tag instrument.photo.key, height: 400, width: 400, crop: :fill %>
        <div class="card-trip-infos">
          <div>
            <h2><%= instrument.name %></h2><%= link_to "Details", instrument %>
            <p><%= instrument.category %></p>
            <p><%= instrument.description %></p>
          </div>
          <h2 class="card-trip-pricing">5 🍺</h2>
          <img src="" class="card-trip-user avatar-bordered" />
        </div>
      </div>

    <% end %>

  </div>

</div>


